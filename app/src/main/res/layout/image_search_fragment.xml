<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hijookim.android.imagesearchapp.app.ImageSearchFragment">

    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_editor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:hint="@string/search_editor_hint"
            android:background="@android:color/white"
            android:inputType="text"
            android:maxLength="1000"
            android:minLines="1"
            android:padding="5dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/search_submit"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="7dp"
        android:paddingLeft="5dp"
        android:text="@string/past_search"/>

    <FrameLayout
        android:id="@+id/image_query_list_container"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />


</LinearLayout>
